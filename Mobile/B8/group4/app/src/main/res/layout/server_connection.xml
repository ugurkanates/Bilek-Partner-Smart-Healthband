<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:background="@color/white" android:padding="20dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/disconnect_server"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="41dp"
        android:background="#9400D3"
        android:onClick="onClick"
        android:text="Kapat" />

    <Button
        android:id="@+id/send_M"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="41dp"
        android:background="#9400D3"
        android:onClick="onClick"
        android:text="Server Kontrol" />

    <Button
        android:id="@+id/begin_date_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_server"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="41dp"
        android:background="#9400D3"
        android:onClick="onClick"
        android:text="Baslangic Tarihi" />

    <Button
        android:id="@+id/end_date_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disconnect_server"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="41dp"
        android:background="#9400D3"
        android:onClick="onClick"
        android:text="Bitis tarihi" />

    <Button
        android:id="@+id/connect_server"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        android:background="#9400D3"
        android:onClick="onClick"
        android:text="Bağlan" />

    <Button
        android:id="@+id/sendFL"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="177dp"
        android:background="#9400D3"
        android:onClick="onClick"
        android:text="Tum datayi iste" />

    <EditText
        android:id="@+id/edMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_server"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="5dp"
        android:hint="Server a bilgi gönder" />


    <ScrollView
        android:layout_width="371dp"
        android:layout_height="348dp"
        android:layout_above="@+id/send_data"
        android:layout_below="@+id/edMessage"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:id="@+id/msgList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <Button
        android:id="@+id/send_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/yellow_style"
        android:onClick="onClick"
        android:text="Gönder"
        android:textColor="@android:color/white" />

</RelativeLayout>