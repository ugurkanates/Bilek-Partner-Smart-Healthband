<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:transitionName="testAnimation"
    tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/syracuseblue"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/fats_progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        app:progress_color="@color/fats" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/fats_progress4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        app:progress_color="@color/fats" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/carbs_progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        app:progress_color="@color/carbs" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/carbs_progress2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="400dp"
        android:layout_marginRight="50dp"
        app:progress_color="@color/carbs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fats_progress"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="50dp"
        android:text="Nabız"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fats_progress4"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="-32dp"
        android:layout_toStartOf="@+id/textView"
        android:text="Cihaz Sicaklgi"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carbs_progress"
        android:layout_alignStart="@+id/carbs_progress"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:text="Sıcaklık"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carbs_progress2"
        android:layout_alignStart="@+id/carbs_progress"
        android:layout_marginStart="27dp"
        android:layout_marginTop="50dp"
        android:text="Batarya"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>