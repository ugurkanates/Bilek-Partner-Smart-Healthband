<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:transitionName="testAnimation">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/syracuseblue"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/goal" />

    <TextView
        android:id="@+id/allgoals"
        android:background="@drawable/red_style"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="17dp" />
    <EditText
        android:id="@+id/walk1"
        style="@style/Font_family_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/run"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:background="#80000000"
        android:drawablePadding="@dimen/padding_8"
        android:ems="10"
        android:hint="Yürüyüş"
        android:inputType="number"
        android:maxLength="50"
        android:maxLines="1"
        android:padding="@dimen/padding_16"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_18" />

    <View
        android:id="@+id/view"
        style="@style/Normal_Margin_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/view_line" />

    <EditText
        android:id="@+id/run"
        style="@style/Font_family_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:background="#80000000"
        android:drawablePadding="@dimen/padding_8"
        android:ems="10"
        android:hint="Koşu"
        android:inputType="number"
        android:maxLength="50"
        android:maxLines="1"
        android:padding="@dimen/padding_16"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_18" />

    <View
        android:id="@+id/view2"
        style="@style/Normal_Margin_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/view_line" />

    <EditText
        android:id="@+id/weight1"
        style="@style/Font_family_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/walk1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:background="#80000000"
        android:drawablePadding="@dimen/padding_8"
        android:ems="10"
        android:hint="Kilo"
        android:inputType="number"
        android:maxLength="50"
        android:maxLines="1"
        android:padding="@dimen/padding_16"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_18" />

    <View
        android:id="@+id/view3"
        style="@style/Normal_Margin_Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/view_line" />

    <Button
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/yellow_style"
        android:text="Kaydet" />


</RelativeLayout>