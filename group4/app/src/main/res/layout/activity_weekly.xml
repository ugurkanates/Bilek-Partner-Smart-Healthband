<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:transitionName="testAnimation"
    tools:context=".Weekly">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        app:itemBackground="@color/syracuseblue"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/fats_progress2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        app:progress_color="@color/fats" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/carbs_progress2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        app:progress_color="@color/carbs" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/protein_progress2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="170dp"
        app:progress_color="@color/protein" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/walk_progress1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        app:progress_color="@color/stayFitAccent" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/step2_progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        app:progress_color="@color/darkblue" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/step1_progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginRight="28dp"
        app:progress_color="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/step2_progress"
        android:layout_below="@+id/step2_progress"
        android:layout_toStartOf="@+id/textView"
        android:text="Toplam Koşu"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_below="@+id/step1_progress"
        android:layout_alignStart="@+id/step1_progress"
        android:layout_marginStart="-31dp"
        android:text="Toplam Merdiven"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fats_progress2"
        android:layout_alignStart="@+id/fats_progress2"
        android:layout_marginStart="29dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/textView3"
        android:text="Nabız"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/carbs_progress2"
        android:layout_below="@+id/carbs_progress2"
        android:layout_marginStart="23dp"
        android:text="Sıcaklık"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walk_progress1"
        android:layout_alignStart="@+id/walk_progress1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/textView5"
        android:text="Toplam Yürüme"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/protein_progress2"
        android:layout_below="@+id/protein_progress2"
        android:layout_marginStart="2dp"
        android:text="Toplam Hareket"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView6" />


</RelativeLayout>